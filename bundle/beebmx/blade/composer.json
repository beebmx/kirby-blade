{
    "name": "beebmx/blade",
    "description": "The standalone version of Laravel's Blade templating engine for use outside of Laravel.",
    "keywords": ["laravel", "blade", "template", "view", "render"],
    "license" : "MIT",
    "authors": [
        {
            "name": "Jens Segers",
            "homepage": "https://jenssegers.com"
        },
        {
            "name": "Fernando Gutierrez",
            "homepage": "https://beeb.mx"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/view": "^7.0|^8.0|^9.0",
        "illuminate/config": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0|^8.0|^9.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jenssegers\\Blade\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
